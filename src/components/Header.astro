---
import HeaderLink from "@components/HeaderLink.astro";
import {
  GITHUB_PROFILE,
  LINKEDIN_PROFILE,
  RSS_FEED,
  SITE_TITLE,
} from "@data/consts";
---

<header>
  <div class="split">
    <code>/</code>
    <a href="/en/about/" class="logo">{SITE_TITLE}</a>
  </div>
  <nav>
    <HeaderLink href="/">Home</HeaderLink>
    <HeaderLink href="/blog">Blog</HeaderLink>
    <HeaderLink href="/en">EN</HeaderLink>
    <HeaderLink href={LINKEDIN_PROFILE} target="_blank">LinkedIn →</HeaderLink>
    <HeaderLink href={GITHUB_PROFILE} target="_blank">GitHub →</HeaderLink>
    <HeaderLink href={RSS_FEED}>RSS →</HeaderLink>
  </nav>
</header>
<style>
  header {
    margin: 0em 0 2em;
  }
  h2 {
    margin: 0.5em 0;
  }
  .split {
    display: flex;
    justify-content: space-between;
    margin: 1em 0;
  }
  .logo {
    /* text-transform: uppercase; */
    text-decoration: none;
    font-weight: bold;
    color: black;
  }
</style>
